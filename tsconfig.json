{
	"compilerOptions": {
		"target": "es5",
		"lib": ["esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"downlevelIteration": true,
		"outDir": "bin"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", ".nyc_output", "coverage", "bin"]
}
